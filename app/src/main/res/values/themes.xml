<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sobes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_top_rated_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_32</item>
        <item name="android:shadowColor">@color/grey</item>
        <item name="android:shadowRadius">4</item>
    </style>
    <style name="title_movie_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_34</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="info_movie_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <style name="overview_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>
    <style name="name_top_movie_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="date_top_movie_style">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>
    <style name="overview_movie_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>
    <style name="actors_movie_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_18</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">
    <TextView
        android:id="@+id/dialog_lat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/dialog_add_marker_latlon_textstyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dialog_lon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/dialog_lon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/dialog_add_marker_latlon_textstyle"
        app:layout_constraintTop_toBottomOf="@+id/dialog_lat"
        app:layout_constraintBottom_toTopOf="@+id/guideline_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"/>
    <EditText
        android:id="@+id/note_name_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/note_name_dialog_hint"
        style="@style/note_name_dialog_style"
        android:layout_marginTop="@dimen/margin_4"
        app:layout_constraintTop_toBottomOf="@+id/guideline_dialog"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_dialog_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_dialog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>
    <EditText
        android:id="@+id/note_dialog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="@string/dialog_note_hint_text"
        style="@style/note_text_dialog_style"
        android:layout_marginTop="@dimen/margin_4"
        app:layout_constraintTop_toBottomOf="@+id/guideline_dialog_name"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_dialog_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_dialog_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90"/>
    <Button
        android:id="@+id/dialog_cancel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_4"
        android:text="@string/dialog_cancel_text"
        app:layout_constraintTop_toTopOf="@+id/guideline_dialog_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dialog_ok_button"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/dialog_ok_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_4"
        android:text="@string/dialog_ok_text"
        app:layout_constraintTop_toTopOf="@+id/guideline_dialog_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_cancel_button"/>
    <ProgressBar
        android:id="@+id/pb_add_marker_dialog"
        style="@style/progress_bar_style"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_dialog_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>